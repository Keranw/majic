<% if !@image.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="well">
  <%= form_for @image,:class => "form-horizontal", html: { multipart: true } do |f|%>
   <%= f.label :name, :class => "col-sm-2 control-label"%>
    <%= f.text_field :name, :class => "form-control wellwidth", :placeholder => "Please input image name"%>
    <%= f.file_field :url %>
    <%= f.label :tag, :class => "col-sm-2 control-label"%>
    <%= f.text_field :tag, :class => "form-control wellwidth", :placeholder => "Please input image tag"%><br/>
    <p style="text-align:center;">
    <%= f.submit "Save", :class =>  "btn btn-primary wellbutton" %>
    </p>
  <% end %>
</div>


