<% provide(:title, "Sign in") %>
<div class="login">
<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>

   <%= f.text_field :email, :class => 'form-control', :placeholder => "Email", :"data-validate" =>'email' %>
  <p class="help-block">Please enter your email</p>
  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
  <p class="help-block">Please enter your password</p>
  <div style ="width:200px; margin-left:65px;text-align:center;">
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in", class: "btn btn-primary" %></div>
</div>
</div>
<% end %>
<div style= "margin-right:10px;text-align:center;">
<%= render "devise/shared/links" %>
</div>
</div>