<% provide(:title, 'Sign up') %>
<div class = "signup">
<h2 class = "head">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.text_field :email, :class => 'form-control', :placeholder => "Email", :"data-validate" =>'email' %>
  <p class="help-block">Please enter your email</p>

  <%= f.text_field :name, :class => 'form-control', :placeholder => "Eame", :"data-validate" =>'name' %>
  <p class="help-block">Please enter your name</p>

   <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password(minimum number is 8)' %>
  <p class="help-block">Please enter your password</p>


<%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Password_confirmation' %>
  <p class="help-block">Please enter your confirmation password</p>
  <div class = "signup-bt"><%= f.submit "Sign up", class: "btn btn-primary"%></div>
<% end %>
</div>
<div class = "signup-link">
<%= render "devise/shared/links" %>
</div>
